<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_report_sales_report_report_html" model="ir.actions.client">
        <field name="name">Sales Customer Report</field>
        <field name="tag">sales_customer_report_backend</field>
        <field name="context" eval="{'active_model': 'report.sales.customer.report'}" />
    </record>

    <record id="view_sales_customer_wizard_form" model="ir.ui.view">
        <field name="name">sales.customer.wizard.form</field>
        <field name="model">sales.customer.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="archivo" readonly="1" filename="name"/>
                    </group>
                    <group>
                        <footer>
                            <button
                        name="button_export_html"
                        string="View"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                            or
                            <button name="print_report_excel" string="Reporte excel" type="object" class="oe_highlight"/>
                            or
                            <button string="Close" class="btn-default" special="cancel"/>
                        </footer>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="window_sales_customer_action" model="ir.actions.act_window">
        <field name="name">Sales Customer Report</field>
        <field name="res_model">sales.customer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

<!--    <act_window id="window_sales_customer" name="Sales Customer Report" res_model="sales.customer.wizard"-->
<!--                src_model="sale.order" view_mode="form" target="new"/>-->
    <menuitem action="window_sales_customer_action" id="menu_sales_customer" parent="sale.menu_sale_report"/>

</odoo>